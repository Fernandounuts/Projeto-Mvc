@model Livros.Models.AutoresModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Create</h1>

<h4 class="text-center">AutoresModel</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeAutor" class="control-label text-white py-2">Nome</label>
                <input asp-for="NomeAutor" class="form-control" />
                <span asp-validation-for="NomeAutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NacionalidadeAutor" class="control-label text-white py-2">Nacionalidade</label>
                <input asp-for="NacionalidadeAutor" class="form-control" />
                <span asp-validation-for="NacionalidadeAutor" class="text-danger"></span>
            </div>
            <br>
            <div class="d-grid gap-2">
                <input type="submit" value="Criar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
