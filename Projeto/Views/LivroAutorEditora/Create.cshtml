@model Livros.Models.LivroAutorEditoraModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row d-flex justify-content-center text-white">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLivroAutorEditora" />
            <div class="form-group">
                <label asp-for="fk_LivrosID" class="control-label py-2">Livro:</label>
                <select asp-for="fk_LivrosID" class="form-control" asp-items="@(new SelectList(ViewBag.Livros,"IdLivro","TituloLivro"))"></select>
                <span asp-validation-for="fk_LivrosID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fk_AutorID" class="control-label py-2">Autor:</label>
                <select asp-for="fk_AutorID" class="form-control" asp-items="@(new SelectList(ViewBag.Autores,"IdAutor","NomeAutor"))"></select>
                <span asp-validation-for="fk_AutorID" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="fk_EditoraID" class="control-label py-2">Editora</label>
                <select asp-for="fk_EditoraID" class="form-control" asp-items="@(new SelectList(ViewBag.Editoras,"IdEditora","NomeEditora"))"></select>
                <span asp-validation-for="fk_EditoraID" class="text-danger"></span>
            </div>
            <br>
            <div class="d-grid gap-2">
                <input type="submit" value="Salvar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
