@model Livros.Models.EditorasModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Detalhes</h1>


<div class="row text-center text-white d-flex justify-content-center py-2">
    <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEditora" />
            <div class="form-group">
                <label asp-for="NomeEditora" class="control-label py-2">Nome Editora:</label>
                <input asp-for="NomeEditora" class="form-control" disabled/>
                <span asp-validation-for="NomeEditora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalizacaoEditora" class="control-label py-2">Localizacao Editora:</label>
                <input asp-for="LocalizacaoEditora" class="form-control" disabled/>
                <span asp-validation-for="LocalizacaoEditora" class="text-danger"></span>
            </div>
            <br>
            <div class="d-grid gap-2">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.IdEditora">Editar</a>
                <a asp-action="Index" class="btn btn-outline-danger">Voltar</a>
            </div>

    </div>
</div>
